<smil>
  <head>
    <layout>
      <root-layout backgroundColor="#A3A3A3" background-color="#A3A3A3" height="480px" width="640px"/>
      <region id="BigImage" top="0" left="0" height="100%" width="100%" fit="meet"/>
      <region id="Image" top="0" left="0" height="30%" width="auto" fit="meet"/>
      <region id="Text" top="50%" left="0" height="70%" width="100%" fit="scroll"/>
    </layout>
  </head>
  <body>
    <par dur="4000ms">
      <img src="megatron.png" region="BigImage"></img>
    </par>
    <par dur="4000ms">
      <img src="decepticons.png" region="Image"></img>
      <text src="megatron.txt" region="Text"><param name="foreground-color" value="#4C4C4C"/><param name="background-color" value="#A3A3A3"/></text>
    </par>
  </body>
</smil>
